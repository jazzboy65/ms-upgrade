<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <changeSet id="UPGAG-4.account" author="jazzboy65">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="account"/>
            </not>
        </preConditions>
        <createTable tableName="account" schemaName="public">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status_id" type="INT"/>
            <column name="client_id" type="UUID"/>
            <column name="account_type" type="VARCHAR"/>
            <column name="currency_code" type="VARCHAR"/>
        </createTable>
    </changeSet>

    <changeSet id="UPGAG-4.account-status" author="jazzboy65">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="account_status"/>
            </not>
        </preConditions>
        <createTable tableName="account_status" schemaName="public">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR"/>
            <column name="description" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="UPGAG-4.client" author="jazzboy65">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client"/>
            </not>
        </preConditions>
        <createTable tableName="client" schemaName="public">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="INT"/>
            <column name="citizenship" type="VARCHAR"/>
            <column name="client_type" type="VARCHAR"/>
            <column name="document_number" type="VARCHAR"/>
            <column name="document_series" type="VARCHAR"/>
            <column name="document_type" type="VARCHAR"/>
            <column name="mdm_code" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="UPGAG-4.foreign_key_constraint_account" author="jazzboy65">
        <addForeignKeyConstraint
                baseTableName="account"
                baseColumnNames="status_id"
                constraintName="fk_account_account_status_id"
                referencedTableName="account_status"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                deferrable="false"
                initiallyDeferred="false"/>
    </changeSet>

    <changeSet id="UPGAG-4.foreign_key_constraint_account_status" author="jazzboy65">
        <addForeignKeyConstraint
                baseTableName="account"
                baseColumnNames="client_id"
                constraintName="fk_account_client_client_id"
                referencedTableName="client"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                deferrable="false"
                initiallyDeferred="false"/>
    </changeSet>

    <changeSet id="UPGAG-4.foreign_key_constraint_client" author="jazzboy65">
        <addForeignKeyConstraint
                baseTableName="client"
                baseColumnNames="full_name"
                constraintName="fk_client_account_status_full_name"
                referencedTableName="account_status"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                deferrable="false"
                initiallyDeferred="false"/>
    </changeSet>

    <changeSet id="UPGAG-4.insert-statuses" author="ALexGordeeff" runOnChange="true">
        <sqlFile path="db/1-insert-statuses.sql"/>
    </changeSet>
</databaseChangeLog>